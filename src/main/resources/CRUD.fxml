<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="523.0" prefWidth="727.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestion_aide.controller.AjouterAide">
    <stylesheets>
        <URL value="@css/style.css" />
    </stylesheets>
    <children>
        <!-- Logo -->
        <ImageView fitHeight="96.0" fitWidth="105.0" layoutX="608.0" layoutY="14.0" />

        <!-- Title -->
        <Label layoutX="321.0" layoutY="44.0" prefHeight="37.0" prefWidth="86.0" styleClass="title-label" text="Ajouter Aide" />

        <!-- Type Field -->
        <Label layoutX="226.0" layoutY="211.0" text="Type :" />
        <TextField fx:id="typetextfield" layoutX="315.0" layoutY="205.0" prefHeight="26.0" prefWidth="197.0" promptText="Type" />

        <!-- Description Field -->
        <Label layoutX="214.0" layoutY="251.0" text="Description :" />
        <TextField fx:id="descriptiontextfield" layoutX="315.0" layoutY="245.0" prefHeight="26.0" prefWidth="198.0" promptText="Description" />

        <!-- Montant Field -->
        <Label layoutX="225.0" layoutY="296.0" text="Montant :" />
        <TextField fx:id="montanttextfield" layoutX="315.0" layoutY="290.0" prefHeight="26.0" prefWidth="198.0" promptText="Montant" />

        <!-- Submit Button -->
        <Button layoutX="331.0" layoutY="337.0" mnemonicParsing="false" onAction="#ajouterAideaction" styleClass="submit-button" text="Valider" />

        <!-- Admin Page Button -->
        <Button layoutX="615.0" layoutY="472.0" mnemonicParsing="false" onAction="#goToAnotherPage" styleClass="admin-button" text="Admin Page" />
    </children>
</AnchorPane>
