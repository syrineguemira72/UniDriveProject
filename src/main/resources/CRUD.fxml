<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.geometry.Insets?>

<?import java.net.URL?>
<AnchorPane prefHeight="395.0" prefWidth="488.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestion_aide.controller.AjouterAide">
    <stylesheets>
        <URL value="@css/style.css" />
    </stylesheets>
    <children>
        <!-- Title -->
        <Label layoutX="160.0" layoutY="50.0" prefHeight="40.0" prefWidth="180.0" text="Ajouter Aide" styleClass="title-label"/>

        <!-- Type Field -->
        <Label layoutX="102.0" layoutY="118.0" prefHeight="18.0" prefWidth="73.0" text="Type :"/>
        <TextField fx:id="typetextfield" layoutX="188.0" layoutY="118.0" prefHeight="26.0" prefWidth="197.0" promptText="Type" />

        <!-- Description Field -->
        <Label layoutX="102.0" layoutY="158.0" prefHeight="18.0" prefWidth="74.0" text="Description :"/>
        <TextField fx:id="descriptiontextfield" layoutX="188.0" layoutY="158.0" prefHeight="26.0" prefWidth="198.0" promptText="Description" />

        <!-- Montant Field -->
        <Label layoutX="102.0" layoutY="203.0" prefHeight="18.0" prefWidth="74.0" text="Montant :"/>
        <TextField fx:id="montanttextfield" layoutX="188.0" layoutY="199.0" prefHeight="26.0" prefWidth="198.0" promptText="Montant" />

        <!-- Submit Button -->
        <Button layoutX="202.0" layoutY="251.0" mnemonicParsing="false" onAction="#ajouterAideaction" text="Valider" styleClass="submit-button"/>

        <!-- Admin Page Button -->
        <Button layoutX="349.0" layoutY="353.0" mnemonicParsing="false" onAction="#goToAnotherPage" text="Admin Page" styleClass="admin-button"/>

    </children>
</AnchorPane>
