<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="600.0"
            stylesheets="@Css/styles.css"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="edu.unidrive.controllers.UpdateEvent"
            style="-fx-background-color: #ffffff; -fx-border-radius: 10px;
                   -fx-border-color: #cccccc; -fx-padding: 20px;">

    <VBox alignment="CENTER" prefHeight="600.0" prefWidth="600.0" spacing="15"
          style="-fx-padding: 20px; -fx-background-color: #f4f4f4; -fx-border-radius: 10px;">

        <!-- Heading -->
        <Label text="Update Event"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" />

        <!-- Title Field -->
        <HBox spacing="10">
            <Label text="Title:"
                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #555;" />
            <TextField fx:id="titreField" promptText="Enter event title"
                       style="-fx-font-size: 14px; -fx-padding: 8px;
                              -fx-border-color: #bbb; -fx-border-radius: 5px;
                              -fx-background-color: #fff;" />
        </HBox>

        <!-- Description Field -->
        <HBox spacing="10">
            <Label text="Description:"
                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #555;" />
            <TextArea fx:id="descriptionField" prefHeight="142.0" prefRowCount="3" prefWidth="343.0"
                      promptText="Enter event description"
                      style="-fx-font-size: 14px; -fx-padding: 8px;
                             -fx-border-color: #bbb; -fx-border-radius: 5px;
                             -fx-background-color: #fff;" />
        </HBox>

        <!-- Date Picker -->
        <HBox spacing="10">
            <Label text="Date:"
                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #555;" />
            <DatePicker fx:id="datePicker"
                        style="-fx-font-size: 14px; -fx-padding: 8px;
                               -fx-border-radius: 5px; -fx-background-color: #fff;" />
        </HBox>

        <Separator style="-fx-background-color: #ddd; -fx-padding: 10px;" /> <!-- Space between sections -->

        <!-- Activity Selection -->
        <Label text="Select Activity"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" />
        <VBox spacing="5">
            <HBox spacing="10">
                <Label text="Activity:"
                       style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #555;" />
                <ComboBox fx:id="activityComboBox" promptText="Select an activity"
                          style="-fx-font-size: 14px; -fx-padding: 8px;
                                 -fx-border-radius: 5px; -fx-background-color: #fff;" />
            </HBox>
        </VBox>

        <!-- Update Button -->
        <Button text="Update" onAction="#updateEvent"
                style="-fx-background-color: #007ACC; -fx-text-fill: white;
                       -fx-font-size: 14px; -fx-padding: 10px 20px;
                       -fx-border-radius: 5px; -fx-cursor: hand;"/>
    </VBox>
</AnchorPane>
