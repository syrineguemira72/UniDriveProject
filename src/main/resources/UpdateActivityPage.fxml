<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane stylesheets="@Css/styles.css" xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="edu.unidrive.controllers.UpdateActivityController"
            style="-fx-background-color: #f4f4f4; -fx-padding: 20px; -fx-border-radius: 10px; -fx-border-color: #ddd;">

    <!-- Title Label and TextField -->
    <Label layoutX="20" layoutY="20" text="Title" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;" />
    <TextField fx:id="titreField" layoutX="120" layoutY="18" prefWidth="300"
               style="-fx-font-size: 14px; -fx-padding: 8px; -fx-border-color: #ccc; -fx-border-radius: 5px; -fx-background-radius: 5px;" />

    <!-- Description Label and TextField -->
    <Label layoutX="20" layoutY="65" text="Description" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;" />
    <TextField fx:id="descriptionField" layoutX="120" layoutY="63" prefWidth="300"
               style="-fx-font-size: 14px; -fx-padding: 8px; -fx-border-color: #ccc; -fx-border-radius: 5px; -fx-background-radius: 5px;" />

    <!-- Date Label and DatePicker -->
    <Label layoutX="20" layoutY="110" text="Date" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;" />
    <DatePicker fx:id="datePicker" layoutX="120" layoutY="108" prefWidth="300"
                style="-fx-font-size: 14px; -fx-border-radius: 5px; -fx-background-radius: 5px;" />

    <!-- Update Button -->
    <Button layoutX="120" layoutY="160" onAction="#updateActivity" text="Update"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;
                   -fx-padding: 8px 16px; -fx-border-radius: 5px; -fx-background-radius: 5px;
                   -fx-cursor: hand;"/>
</AnchorPane>
