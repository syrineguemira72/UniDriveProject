<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="702.0" prefWidth="874.0" stylesheets="@Css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.unidrive.controllers.ActivityController">

    <!-- Sidebar -->
    <VBox layoutX="0.0" layoutY="0.0" prefHeight="702.0" prefWidth="200.0" style="-fx-background-color: #2c3e50; -fx-padding: 20px;">
        <children>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
                <children>
                    <Button fx:id="ActivityId" layoutX="22.0" layoutY="30.0" mnemonicParsing="false" onAction="#NavigateToActivity" prefHeight="37.0" prefWidth="135.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-border-radius: 5px;" text="Activity" />
                    <Button fx:id="EventId" layoutX="22.0" layoutY="100.0" mnemonicParsing="false" onAction="#NavigateToEvent" prefHeight="37.0" prefWidth="135.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-border-radius: 5px;" text="Event" />
                </children>
            </AnchorPane>
        </children>
    </VBox>

    <!-- TableView -->
    <TableView fx:id="activityTable" layoutX="250.0" layoutY="20.0" prefHeight="350.0" prefWidth="600.0" style="-fx-background-color: #ffffff; -fx-border-color: #ccc; -fx-border-radius: 10px; -fx-border-width: 2px;">
        <columns>
            <TableColumn fx:id="titreColumn" prefWidth="200" text="Title" style="-fx-font-weight: bold;" />
            <TableColumn fx:id="descriptionColumn" prefWidth="250" text="Description" style="-fx-font-weight: bold;" />
            <TableColumn fx:id="dateColumn" prefWidth="150" text="Date" style="-fx-font-weight: bold;" />
            <TableColumn fx:id="actionColumn" prefWidth="100" text="Actions" style="-fx-font-weight: bold;" />
            <TableColumn fx:id="updateColumn" prefWidth="100" text="Update" style="-fx-font-weight: bold;" />
        </columns>
    </TableView>

    <!-- Form Fields -->
    <AnchorPane layoutX="250.0" layoutY="400.0" prefHeight="200.0" prefWidth="600.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 10px; -fx-border-width: 2px; -fx-padding: 15px;">
        <children>
            <Label layoutX="20.0" layoutY="20.0" text="Title" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
            <TextField fx:id="titreField" layoutX="120.0" layoutY="15.0" prefWidth="400" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-padding: 5px;" />

            <Label layoutX="20.0" layoutY="70.0" text="Description" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
            <TextField fx:id="descriptionField" layoutX="120.0" layoutY="65.0" prefWidth="400" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px; -fx-padding: 5px;" />

            <Label layoutX="20.0" layoutY="120.0" text="Date" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
            <DatePicker fx:id="datePicker" layoutX="120.0" layoutY="115.0" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px;" />
        </children>
    </AnchorPane>

    <!-- Add Button -->
    <Button layoutX="730.0" layoutY="620.0" onAction="#addActivity" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 5px; -fx-padding: 10px 20px;" text="Add Activity" />
</AnchorPane>