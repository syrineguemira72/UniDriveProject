<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="364.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cov.pidev3a8.hamza.controllers.EventCard">
    <children>
        <VBox prefHeight="300.0" prefWidth="364.0" spacing="15.0" VBox.vgrow="ALWAYS"
              style="-fx-background-color: #ffffff;
                     -fx-border-radius: 10px;
                     -fx-border-color: #ccc;
                     -fx-border-width: 2px;
                     -fx-background-radius: 10px;
                     -fx-padding: 15px;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>

            <!-- Event Title -->
            <Label fx:id="id_title" alignment="CENTER" prefHeight="40.0" prefWidth="350.0"
                   style="-fx-font-size: 18px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #333333;
                          -fx-padding: 5px 0;
                          -fx-border-width: 0 0 2px 0;
                          -fx-border-color: #ddd;"
                   text="Event Title" />

            <!-- Event Description -->
            <Label fx:id="id_description" alignment="CENTER" prefHeight="50.0" prefWidth="350.0"
                   style="-fx-font-size: 14px;
                          -fx-text-fill: #666666;
                          -fx-padding: 10px 0;"
                   text="Event Description" wrapText="true" />

            <!-- Event Date -->
            <Label fx:id="id_date" alignment="CENTER" prefHeight="30.0" prefWidth="350.0"
                   style="-fx-font-size: 14px;
                          -fx-text-fill: #777777;
                          -fx-font-weight: bold;
                          -fx-padding: 5px 0;"
                   text="Event Date" />

            <!-- Event Activities -->
            <Label fx:id="id_activities" alignment="CENTER" prefHeight="30.0" prefWidth="350.0"
                   style="-fx-font-size: 14px;
                          -fx-text-fill: #777777;
                          -fx-padding: 5px 0;"
                   text="Activities" />

            <!-- Buttons -->
            <HBox alignment="CENTER" prefHeight="60.0" prefWidth="350.0" spacing="30.0">
                <children>
                    <!-- Update Button -->
                    <Button fx:id="id_update" alignment="CENTER" contentDisplay="CENTER"
                            mnemonicParsing="false" onAction="#updateEvent"
                            prefHeight="36.0" prefWidth="150.0"
                            style="-fx-background-color: linear-gradient(to bottom, #4CAF50, #388E3C);
                                   -fx-text-fill: white;
                                   -fx-font-weight: bold;
                                   -fx-background-radius: 8px;
                                   -fx-border-radius: 8px;
                                   -fx-border-color: #2E7D32;
                                   -fx-border-width: 1px;"
                            text="Update" />

                    <!-- Delete Button -->
                    <Button fx:id="id_del" alignment="CENTER" contentDisplay="CENTER"
                            mnemonicParsing="false" onAction="#deleteEvent"
                            prefHeight="36.0" prefWidth="150.0"
                            style="-fx-background-color: linear-gradient(to bottom, #F44336, #D32F2F);
                                   -fx-text-fill: white;
                                   -fx-font-weight: bold;
                                   -fx-background-radius: 8px;
                                   -fx-border-radius: 8px;
                                   -fx-border-color: #B71C1C;
                                   -fx-border-width: 1px;"
                            text="Delete" />
                </children>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
