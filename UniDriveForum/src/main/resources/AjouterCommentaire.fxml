<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<?import java.net.URL?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.pidev.controllers.Ajoutercommentairecontrollers">
   <stylesheets>
      <URL value="@./Css/styles.css" /> <!-- Lier le fichier CSS -->
   </stylesheets>
   <children>
      <!-- Conteneur principal (HBox pour diviser la page en deux) -->
      <HBox prefHeight="400.0" prefWidth="600.0">
         <!-- Section gauche (Formulaire) -->
         <VBox styleClass="form-section" prefWidth="300.0" prefHeight="400.0">
            <children>
               <TextField fx:id="commentid" styleClass="form-field" promptText="Entrez votre commentaire..." />
               <Button text="Commenter" styleClass="form-button" onAction="#commentaction" />
            </children>
         </VBox>

         <!-- Section droite (Fond bleu avec logo) -->
         <VBox styleClass="logo-section" prefWidth="300.0" prefHeight="400.0" alignment="CENTER">
            <children>
               <ImageView fitHeight="318.0" fitWidth="277.0" preserveRatio="true">                  <image>
                     <Image url="@images/logo.png" /> <!-- Chemin relatif vers l'image -->
                  </image>
               </ImageView>
            </children>
         </VBox>
      </HBox>
   </children>
</AnchorPane>